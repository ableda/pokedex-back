{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "Authentication micro service with Typescript, Nodejs, Express, Passport, MongoDB built on top of ableda/nodejs-template",
  "author": "Alex Bleda",
  "repository": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "debug": "nodemon --exec \" node -r ts-node/register --inspect=0.0.0.0:9229 ./src/server.ts \"",
    "clean": "rm -rf build",
    "compile": "run-s compile:*",
    "compile:clean": "npm run clean",
    "compile:service": "tsc -p tsconfig.json",
    "pretest": "npm run lint && npm run compile",
    "analyze": "npm run lint",
    "package": "exit 0",
    "lint": "eslint \"src/**/*.ts\"",
    "unit-test": "jest --config jest.config.js --testPathPattern=\".*/unit.*.spec.ts\" --cache false",
    "test:functional-local": "sh scripts/local-integration-tests.sh"
  },
  "dependencies": {
    "@types/passport": "^1.0.4",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "bcrypt": "^5.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.19",
    "mongoose": "^5.9.22",
    "morgan": "^1.10.0",
    "npm-run-all": "^4.1.5",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "typegoose": "^5.9.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.4",
    "@types/helmet": "0.0.45",
    "@types/jest": "^25.2.1",
    "@types/lodash": "^4.14.149",
    "@types/mongoose": "^5.7.30",
    "@types/node": "^13.11.0",
    "@types/nodemon": "^1.19.0",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.2.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.4",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  }
}
